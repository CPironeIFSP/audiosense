{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // ESSENCIAL para React Native
    "jsx": "react-native",

    // Ativa verificações de tipo estritas
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Ignora checagem de bibliotecas (node_modules etc.)
    "skipLibCheck": true,
    // Garante consistência de maiúsculas/minúsculas
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
